      <%= form_with model: @book do |f| %>
        <h1>New book</h1>
        <h6>Title</h6>
        <%= f.text_field :title %>
        
        <h6>Option</h6>
        <%= f.text_area :body %>
        
        <br>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    
    <!-- ユーザーの投稿一覧 -->
    <div class="col-8 offset-1">
    <table>
      <thead>
        <tr>
        <h1>Books</h1>
        <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to(image_tag(book.user.get_profile_image_url(100, 100)), user_path(book.user)) if book.user.present? %></td>
          <td><%= link_to(book.title, book_path(book)) %></td>
        </tr>
      <% end %>
    </tbody>
