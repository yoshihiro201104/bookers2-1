
<div class="container">
<div class="row">
<div class="col-3">
<%= render 'shared/userbook', user:@user, book:@book %>
</div>

    <div class="col-8 offset-1">
        <!-- ユーザーの一覧 -->
        <table class="table table-striped">
        <thead>
          <tr>
           <h1>Users</h1>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image_url(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
  </div>
</div>



